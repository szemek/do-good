.deed{'ng-repeat' => 'deed in combined.deeds'}
  .small-1.large-1.columns.icon
    %img{'ng-src' => '{{deed.happiness_icon_url}}'}
  .small-11.large-11.columns.info
    %h2 {{deed.person}}
    %h3
      %span {{deed.timestamp | date:'h:mm a'}}
      %span {{deed.timestamp | date:'dd/MM/yyyy'}}
    %p {{deed.action}}
    %hr
    .actions
      .small-1.large-1.columns{'ng-class' => '{liked: deed.liked}'}
        .like{'ng-hide' => 'deed.liked', 'ng-click' => 'like(deed)'}
        .like{'ng-show' => 'deed.liked', 'ng-click' => 'unlike(deed)'}
        .likes-count {{deed.likes_count}}
      .small-10.large-10.columns &nbsp;
      .small-1.large-1.columns{'ng-class' => '{reported: deed.reported}'}
        .report.has-tip{'ng-click' => 'report(deed)', 'data-reveal-id' => 'report-modal', 'tooltip-html-unsafe' => 'Report&nbsp;abuse', 'tooltip-animation' => 'false'}
