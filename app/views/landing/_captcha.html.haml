.captcha.row{'ng-show' => 'steps.captcha'}
  .small-1.medium-2.large-2.columns &nbsp;
  .small-10.medium-8.large-8.columns
    = image_tag('form/captcha.png', alt: 'captcha')
    %form{'ng-submit' => 'goToThanks()'}
      .large-12.columns
        .large-1.columns &nbsp;
        .large-10.columns
          .choice{'ng-init' => 'deed.happiness = 2'}
            .slider
            .happy-areas
              .happy-1-area{'ng-click' => 'beHappy(1)'}
                .happy-1-icon
                .happy-1-text happy
              .happy-2-area{'ng-click' => 'beHappy(2)'}
                .happy-2-icon
                .happy-2-text very happy
              .happy-3-area{'ng-click' => 'beHappy(3)'}
                .happy-3-icon
                .happy-3-text extremely happy
            .happy-selection{'data-selected' => '{{deed.happiness}}'}
              .pointer
        .large-1.columns &nbsp;
      .large-12.columns
        %input{:type => 'submit', :value => 'Share happiness'}
  .small-1.medium-2.large-2.columns &nbsp;
