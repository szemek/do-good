.captcha.row{'ng-show' => 'steps.captcha'}
  .small-1.medium-2.large-2.columns &nbsp;
  .small-10.medium-8.large-8.columns
    = image_tag('form/captcha.png', alt: 'captcha')
    %form{'ng-submit' => 'finish()'}
      .large-12.columns
        .large-1.columns &nbsp;
        .large-10.columns
          %input{:type => 'range', 'ng-init' => 'deed.happiness = 2', 'ng-model' => 'deed.happiness', :required => true, :min => 1, :max => 3, :value => 2}
        .large-1.columns &nbsp;
      .large-12.columns.scale
        .large-4.columns happy
        .large-4.columns very happy
        .large-4.columns extremely happy
      .large-12.columns
        %input{:type => 'submit', :value => 'Share happiness'}
  .small-1.medium-2.large-2.columns &nbsp;
