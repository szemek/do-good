- content_for :opengraph do
  %meta{property: 'og:title', content: 'Spread Good with DoGood!'}
  %meta{property: 'og:description', content: 'DoGood is a first ever global list of good deeds. Helps people inspire themselves and spread good.'}
  %meta{property: 'og:image', content: URI.join(root_url, image_path('fb.png'))}

.content{'ng-controller' => 'DeedsController'}
  = render 'form'
  = render 'counter'
  = render 'deeds'
  = render 'pagination'
