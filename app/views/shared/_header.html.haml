%header
  .small-4.medium-4.large-4.columns &nbsp;
  .small-4.medium-4.large-4.columns
    %a.logo{href: root_path}
  .small-4.medium-4.large-4.columns
    - if current_user
      .logged
        = image_tag(current_user.avatar, alt: 'avatar', class: 'avatar')
        %span.username= current_user_name
        = link_to(logout_path, method: :delete) do
          = fa_icon 'power-off'
    - else
      %a.login{href: login_path}
    &nbsp;
